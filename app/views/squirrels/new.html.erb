<%= form_for @squirrel do |f|%>
    <div class="form-group">
         <b><%= f.label "Squirrel Name" %></b>
        <%= f.text_field :name, placeholder: "Enter Name",  class: "form-control" %>
    </div>
    <div class="form-group">
        <b><%= f.label "Bio" %></b>
        <%= f.text_area :bio, placeholder: "Write the bio", class: "form-control"%>
    </div>
    <div class="form-group">
        <b><%= f.label "Mood" %></b>
        <%= f.collection_select :avatar_id, Avatar.all, :id, :name %>
    </div>
    <b><%= f.submit "Signup", class: "btn btn-info" %></b>
<% end %>


<%= link_to "Back to Squirrels", squirrels_path, class: "back-link" %>


