<h1>Edit Stash</h1>


<%= form_for @stash do |f|%>
<%= f.label "Stash Name" %>
<%= f.text_field :name, placeholder: "Enter Name" %>
<%= f.label "Squirrel" %>
<%= f.collection_select :squirrel_id, Squirrel.all, :id, :name %>
<%= f.label "Snack" %>
<%= f.collection_select :snack_id, Snack.all, :id, :name %>
<%= f.submit %>
<% end %>


<%= link_to "Back: #{@stash.name}", stash_path(@stash) %> 