
<h1>Create a new Stash</h1>


<%= form_for @stash do |f| %>
    <div class="form-group">
        <%= f.label "Stash Name" %>
        <%= f.text_field :name, placeholder: "Enter Name", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label "Squirrel" %>
        <%= f.collection_select :squirrel_id, Squirrel.all, :id, :name %>
    </div>
    <div class="form-group">
        <%= f.label "Snack" %>
        <%= f.collection_select :snack_id, Snack.all, :id, :name %>
    </div>
    <%= f.submit "Create Stash", class: "btn btn-info" %>
<% end %>


<%= link_to "Back to Stashes", stashes_path, class: "back-link" %>


